# 数据库配置
DATABASE_URL="postgresql://postgres:${DB_PASSWORD}@postgres:5432/btcbuy"

# JWT配置
JWT_SECRET="${JWT_SECRET}"
JWT_EXPIRES_IN=24h

# 服务端口配置
USER_API_PORT=3001
ADMIN_API_PORT=3002
USER_UI_PORT=80
ADMIN_UI_PORT=8080

# 环境配置
NODE_ENV=production

# Redis配置
REDIS_URL=redis://redis:6379
REDIS_PASSWORD=${REDIS_PASSWORD}
REDIS_DB=0

# 前端URL配置
FRONTEND_URL=http://localhost
API_URL=http://localhost:3001

# 安全配置
CORS_ORIGIN=https://your-domain.com
COOKIE_SECRET=${COOKIE_SECRET}

# 日志配置
LOG_LEVEL=info
LOG_DIR=/var/log/btcbuy
LOG_MAX_SIZE=20m
LOG_MAX_FILES=14d

# 监控配置
ALERT_WEBHOOK=https://your-domain.com/alerts
CPU_THRESHOLD=80
MEMORY_THRESHOLD=80
DISK_THRESHOLD=80
RESPONSE_TIME_THRESHOLD=1000

# 性能配置
MAX_CONNECTIONS=100
REQUEST_TIMEOUT=30000
KEEP_ALIVE_TIMEOUT=65000
HEADERS_TIMEOUT=66000

# Database Configuration
DB_USER=btcbuy
DB_PASSWORD=your_secure_password
DB_NAME=btcbuy
DB_HOST=postgres
DB_PORT=5432

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=your_secure_redis_password

# Frontend URLs
USER_UI_URL=http://user.your-domain.com
ADMIN_UI_URL=http://admin.your-domain.com

# Monitoring
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=your_secure_grafana_password
SMTP_USERNAME=your_smtp_username
SMTP_PASSWORD=your_smtp_password
ALERT_EMAIL=alerts@your-domain.com

# Email Service
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_FROM=noreply@your-domain.com

# SMS Service
SMS_PROVIDER=twilio
SMS_ACCOUNT_SID=your_twilio_account_sid
SMS_AUTH_TOKEN=your_twilio_auth_token
SMS_FROM_NUMBER=your_twilio_phone_number

# Storage
STORAGE_TYPE=local
STORAGE_PATH=/var/www/uploads
MAX_FILE_SIZE=5242880

# Payment Gateway
PAYMENT_GATEWAY=stripe
STRIPE_SECRET_KEY=your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret

# Blockchain
BTC_NETWORK=mainnet
BTC_NODE_URL=your_btc_node_url
BTC_NODE_USERNAME=your_btc_node_username
BTC_NODE_PASSWORD=your_btc_node_password 