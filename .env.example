# 数据库配置
DATABASE_URL="postgresql://postgres:your_password@localhost:5432/btcbuy"

# JWT配置
JWT_SECRET="your_jwt_secret"
JWT_EXPIRES_IN=24h

# 服务端口配置
USER_API_PORT=3001
ADMIN_API_PORT=3002
USER_UI_PORT=80
ADMIN_UI_PORT=80

# 环境配置
NODE_ENV=development

# Redis配置
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your_redis_password
REDIS_DB=0

# 前端URL配置
FRONTEND_URL=http://localhost:3000

# 安全配置
CORS_ORIGIN=http://localhost:3000
COOKIE_SECRET=your_cookie_secret

# 日志配置
LOG_LEVEL=info
LOG_DIR=logs
LOG_MAX_SIZE=20m
LOG_MAX_FILES=14d

# 监控配置
ALERT_WEBHOOK=http://localhost:3000/alerts
CPU_THRESHOLD=80
MEMORY_THRESHOLD=80
DISK_THRESHOLD=80
RESPONSE_TIME_THRESHOLD=1000

# 性能配置
MAX_CONNECTIONS=100
REQUEST_TIMEOUT=30000
KEEP_ALIVE_TIMEOUT=65000
HEADERS_TIMEOUT=66000

# 邮件服务配置
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your_smtp_user
SMTP_PASS=your_smtp_password
SMTP_FROM=noreply@example.com

# 短信服务配置
SMS_API_KEY=your_sms_api_key
SMS_API_SECRET=your_sms_api_secret
SMS_SIGN_NAME=your_sign_name
SMS_TEMPLATE_CODE=your_template_code

# 存储配置
OSS_ACCESS_KEY_ID=your_oss_key_id
OSS_ACCESS_KEY_SECRET=your_oss_key_secret
OSS_BUCKET=your_bucket_name
OSS_REGION=your_region
OSS_ENDPOINT=your_endpoint

# 支付配置
PAYMENT_API_KEY=your_payment_api_key
PAYMENT_API_SECRET=your_payment_api_secret
PAYMENT_WEBHOOK_SECRET=your_webhook_secret

# 区块链配置
ETH_MAINNET_RPC_URL=your_eth_mainnet_rpc_url
ETH_TESTNET_RPC_URL=your_eth_testnet_rpc_url
BTC_API_KEY=your_btc_api_key
BTC_API_SECRET=your_btc_api_secret 